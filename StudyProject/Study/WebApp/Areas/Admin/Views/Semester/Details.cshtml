@model App.Domain.Semester

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    
    
    <form asp-action="AddUser" method="post">
        <input name="semesterId" hidden="hidden" readonly="readonly" value="@Model?.Id"/>
        <select name="userId" asp-items="ViewBag.Users"></select>
        <button type="submit">Add User to Semester</button>
    </form>

    <form asp-action="RemoveUser" method="post">
        <input name="semesterId" hidden="hidden" readonly="readonly" value="@Model?.Id"/>
        <select name="userId" asp-items="ViewBag.AlreadyUsers"></select>
        <button type="submit">Remove User from Semester</button>
    </form>
</div>
